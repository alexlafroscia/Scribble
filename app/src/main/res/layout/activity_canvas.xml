<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.pitt.cs.cs1635.arl95.scribble.CanvasActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawingName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/name_field_placeholder"
        android:inputType="text"
        android:layout_toStartOf="@+id/ink_color_switch"
        android:layout_alignRight="@+id/canvas_view"
        android:layout_alignEnd="@+id/canvas_view" />

    <edu.pitt.cs.cs1635.arl95.scribble.CanvasView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/canvas_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ink_color_switch" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/ink_color_switch"
        android:layout_below="@+id/drawingName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
